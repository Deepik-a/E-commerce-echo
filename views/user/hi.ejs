    <script>
    $(document).ready(function () {
        // When the "Show Coupon Code" button is clicked
        $('#applyCouponButton').click(function () {
            // Open the modal to show the coupon list
            $('#couponModal').modal('show');

            // Fetch coupon data from the server
            $.ajax({
                url: '/get-coupons', // Server route to fetch coupons
                method: 'GET',
                success: function (response) {
                    if (response.success) {
                        // Populate modal with coupon data
                        let couponHTML = '';
                        response.coupons.forEach(function (coupon) {
                            couponHTML += `
                                <div class="coupon-item mb-3">
                                    <p><strong>Code:</strong> ${coupon.code}</p>
                                    <p><strong>SAVE:</strong> $${coupon.discountValue}</p>
                                    <p><strong>End Date:</strong> ${new Date(coupon.endDate).toLocaleDateString()}</p>
                                    <p><strong>Status:</strong> ${coupon.isActive ? 'Active' : 'Inactive'}</p>
                                    <button class="btn btn-success apply-coupon-btn" data-coupon-code="${coupon.code}" style="color: white;">Apply Coupon</button>
                                    <hr>
                                </div>
                            `;
                        });
                        $('#couponList').html(couponHTML);  // Assuming you have a div with id "couponList" to display the coupons
                    } else {
                        alert('Failed to load coupon data.');
                    }
                },
                error: function () {
                    alert('Error fetching coupon data.');
                }
            });
        });

        // Event listener for "Apply Coupon" buttons
        $(document).on('click', '.apply-coupon-btn', function () {
            // Get the coupon code from the button's data attribute
            const couponCode = $(this).data('coupon-code');

            // Update the placeholder of the coupon input field with the selected coupon code
            $('#couponCodeInput').attr('placeholder', couponCode);

            // Send a POST request to apply the coupon
            $.ajax({
                type: 'POST',
                url: '/apply-coupon',
                data: { couponCode: couponCode },
                success: function (response) {
                    if (response.success) {
                        // Update the UI with the discount and new total
                        $('#couponDiscount').text(`-$${response.discount.toFixed(2)}`);
                        $('#payableAmount').text(`$${response.newTotal.toFixed(2)}`);

                        // Show the close button
                        $('#removeCouponButton').removeClass('d-none');
                        alert('Coupon applied successfully!');
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('Error applying coupon.');
                }
            });

            // Optionally, close the modal after applying the coupon
            $('#couponModal').modal('hide');
        });

        // Remove the applied coupon
        $('#removeCouponButton').click(function () {
            $.ajax({
                type: 'POST',
                url: '/remove-coupon',
                success: function (response) {
                    if (response.success) {
                        // Reset discount and payable amount
                        $('#couponDiscount').text('-$0.00');
                        $('#payableAmount').text(`$${response.originalTotal.toFixed(2)}`);

                        // Hide the close button
                        $('#removeCouponButton').addClass('d-none');

                        alert('Coupon removed successfully!');
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('Error removing coupon.');
                }
            });
        });

});

</script>
