    <title>ECHO EMPORIUM</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .main-content {
            position: relative;
            width: 100%;
            height: 100vh;
            background-color: red; 
            background-image: url('../../public/assets/Screenshot\ 2025-01-25\ 184905.png');
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
        }

        .image-slider-container {
            position: absolute;
            width: 100%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .image-slider {
            position: relative;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .slider-item {
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

        .slider-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .slider-item.active {
            opacity: 1;
        }

        .running-ad-container {
            overflow: hidden;
            background-color: rgb(26, 83, 25);
            color: white;
            padding: 10px 0;
            white-space: nowrap;
            position: relative;
        }

        .running-ad {
            display: inline-block;
            animation: running-ad 10s linear infinite;
        }

        @keyframes running-ad {
            0% { transform: translateX(100%); }
            100% { transform: translateX(-100%); }
        }
    </style>
</head>
<body>
    <div class="main-content">
        <div class="image-slider-container">
            <div class="image-slider" id="imageSlider">
                <div class="slider-item active">
                    <img src="../../public/assets/Screenshot 2025-01-25 184905.png" alt="Image 1">
                </div>
                <div class="slider-item">
                    <img src="../../public/assets/Screenshot 2025-01-25 185713.png" alt="Image 2">
                </div>
                <div class="slider-item">
                    <img src="../../public/assets/freepik__upload__69209.jpg" alt="Image 3">
                </div>
            </div>
        </div>
    </div>

    <div class="running-ad-container">
        <div class="running-ad">
            üéâ MEGA SALE! OFFERS ON MATTRESSES | FREE SHIPPING | LIMITED TIME OFFER | UPGRADE YOUR SLEEP TODAY! üõèÔ∏è Don't miss out on this amazing offer to improve your sleep quality at unbeatable prices. Hurry, the offer ends soon!
        </div>
        <div class="running-ad">
            üéâ EXCLUSIVE OFFER! OFFERS ON SOFA-CUM-BED | FREE DELIVERY | LIMITED TIME ONLY | FURNISH YOUR HOME TODAY! üõãÔ∏è Grab your dream sofa today at an incredible discount. Free delivery on all orders, so don't wait!
        </div>
    </div>

    <script>
        const imageSlider = document.getElementById('imageSlider');
        const slides = imageSlider.querySelectorAll('.slider-item');
        let currentSlideIndex = 0;

        function fadeImages() {
            // Remove "active" class from the current slide
            slides[currentSlideIndex].classList.remove('active');

            // Update the index to the next slide
            currentSlideIndex = (currentSlideIndex + 1) % slides.length;

            // Add "active" class to the next slide
            slides[currentSlideIndex].classList.add('active');
        }

        // Set interval to change slides every 3 seconds
        setInterval(fadeImages, 3000);
    </script>
</body>
</html>

