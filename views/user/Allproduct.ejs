<div class="pagination-container">
    <% if (hasPrevPage) { %>
        <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>&category=<%= selectedCategory %>&sort=<%= selectedSort %>" class="pagination-link">Previous</a>
    <% } %>

