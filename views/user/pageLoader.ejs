
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        #content {
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
        }

        #loadingOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s;
        }

        #loadingOverlay.hidden {
            opacity: 0;
            pointer-events: none;
            /* Enable scrolling when hidden */
            overflow: auto;
        }

        /* Rest of the loader styles remain the same */
        .loader-container {
            position: relative;
            width: 300px;
            height: 200px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .bed {
            position: relative;
            width: 300px;
            height: 180px;
            animation: bedFloat 3s ease-in-out infinite;
        }

        .mattress {
            position: absolute;
            bottom: 40px;
            width: 280px;
            height: 60px;
            background:rgb(26, 83, 25)
;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .blanket {
            position: absolute;
            bottom: 60px;
            width: 280px;
            height: 40px;
            background: #5c6bc0;
            border-radius: 10px;
            transform-origin: bottom;
            animation: blanketWave 3s ease-in-out infinite;
        }

        .pillow-left, .pillow-right {
            position: absolute;
            width: 70px;
            height: 40px;
            background: #fff;
            border-radius: 10px;
            bottom: 80px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .pillow-left {
            left: 20px;
            animation: pillowLeftFloat 3s ease-in-out infinite;
        }

        .pillow-right {
            right: 20px;
            animation: pillowRightFloat 3s ease-in-out infinite;
        }

        .bed-frame {
            position: absolute;
            bottom: 0;
            width: 300px;
            height: 40px;
            background: #795548;
            border-radius: 10px;
        }

        .bed-leg-left, .bed-leg-right {
            position: absolute;
            bottom: -30px;
            width: 20px;
            height: 30px;
            background: #5d4037;
            border-radius: 0 0 5px 5px;
        }

        .bed-leg-left {
            left: 30px;
        }

        .bed-leg-right {
            right: 30px;
        }

        .loading-text {
            margin-top: 40px;
            font-size: 24px;
            color: #333;
            text-transform: uppercase;
            letter-spacing: 3px;
            animation: textPulse 2s ease-in-out infinite;
        }

        .loading-dots::after {
            content: '';
            animation: dots 2s infinite;
        }

        .test-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            padding: 15px 30px;
            font-size: 18px;
            background:rgb(26, 83, 25)
;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.3s;
            z-index: 1;
        }

        .test-button:hover {
            background: #357abd;
        }

        @keyframes bedFloat {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-15px); }
        }

        @keyframes blanketWave {
            0%, 100% { transform: scaleY(1); }
            50% { transform: scaleY(0.9); }
        }

        @keyframes pillowLeftFloat {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-10px) rotate(-5deg); }
        }

        @keyframes pillowRightFloat {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-10px) rotate(5deg); }
        }

        @keyframes textPulse {
            0%, 100% { opacity: 0.5; }
            50% { opacity: 1; }
        }

        @keyframes dots {
            0% { content: ''; }
            25% { content: '.'; }
            50% { content: '..'; }
            75% { content: '...'; }
        }
    </style>



    <!-- Loading Overlay -->
    <div id="loadingOverlay">
        <div class="loader-container">
            <div class="bed">
                <div class="blanket"></div>
                <div class="mattress"></div>
                <div class="pillow-left"></div>
                <div class="pillow-right"></div>
                <div class="bed-frame">
                    <div class="bed-leg-left"></div>
                    <div class="bed-leg-right"></div>
                </div>
            </div>
            <div class="loading-text">Loading<span class="loading-dots"></span></div>
        </div>
    </div>

  
    <script>
        function showLoading() {
            document.getElementById('loadingOverlay').classList.remove('hidden');
            document.body.style.overflow = 'hidden'; // Prevent scrolling when loader is shown
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').classList.add('hidden');
            document.body.style.overflow = 'auto'; // Enable scrolling when loader is hidden
        }

        function toggleLoader() {
            showLoading();
            setTimeout(hideLoading, 2000);
        }

        window.addEventListener('load', () => {
            setTimeout(hideLoading, 2000);
        });
    </script>
