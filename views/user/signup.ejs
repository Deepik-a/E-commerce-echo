            transform: translateY(-2px);
        }

        .form-floating > label {
            color: #666;
            padding-left: 1rem;
        }

        .toggle-password {
            cursor: pointer;
            color: #666;
        }

        .toggle-password:hover {
            color: #1A5319;
        }

