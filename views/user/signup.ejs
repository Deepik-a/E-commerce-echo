            padding: 2rem;
            height: 100%;
        }

        .form-control:focus {
            border-color: #508d4e;
            box-shadow: 0 0 0 0.25rem rgba(80, 141, 78, 0.25);
        }

        .form-control {
            border-radius: 10px;
            padding: 0.75rem;
        }

