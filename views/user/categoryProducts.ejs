<h1 class="category-heading text-success text-center my-4"><%= categoryName %></h1>


    <style>
        :root {
            --primary-color: rgb(26, 83, 25);
            --secondary-color: rgb(214, 239, 216);
            --text-dark: #1f2937;
            --text-light: #6b7280;
            --bg-light: #f3f4f6;
            --transition-speed: 0.3s;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: var(--bg-light);
            line-height: 1.6;
        }

        .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 2rem;
    max-width: 1200px; /* Constrain the grid width */
    margin: 0 auto;
    justify-content: center; /* Center the grid items when there's only one */
}

.product-card {
    background-color: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
    transition: all var(--transition-speed) ease;
    transform-origin: center;
    position: relative;
    width: 100%;
    max-width: 400px; /* Prevent the card from becoming too wide */
    margin: 0 auto; /* Center a single card */
}


        .product-card:hover {
            transform: scale(1.03);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .product-carousel {
            position: relative;
            overflow: hidden;
            height: 400px;
        }

        .carousel-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform var(--transition-speed) ease;
        }

        .product-card:hover   {
            transform: scale(1.1);
        }

        .product-details {
            padding: 1rem;
            text-align: center;
        }

        .product-name {
            color: var(--primary-color);
         
            font-weight: 600;
            margin-bottom: 0.5rem;
            transition: color var(--transition-speed) ease;
        }

        .product-pricing {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.75rem;
            margin: 0.5rem 0;
        }

        .final-price {
            font-weight: 700;
            color: var(--text-dark);
        }

        .original-price {
            text-decoration: line-through;
            color: var(--text-light);
            font-size: 0.9rem;
        }

        .discount-badge {
            background-color: var(--secondary-color);
            color: var(--text-dark);
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .wishlist-btn {
            color: #ff4757;
            transition: transform var(--transition-speed) ease;
        }

        .wishlist-btn:hover {
            transform: scale(1.2);
        }

        .stock-info {
            color: var(--text-light);
            margin: 0.5rem 0;
        }

        .product-action {
            display: inline-block;
            padding: 0.5rem 1rem;
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            text-decoration: none;
            border-radius: 6px;
            transition: all var(--transition-speed) ease;
            margin-top: 0.5rem;
        }

        .product-action:hover {
            background-color: var(--primary-color);
            color: white;
        }

        .out-of-stock {
            border-color: #dc3545;
            color: #dc3545;
            cursor: not-allowed;
        }

        .out-of-stock:hover {
            background-color: #dc3545;
            color: white;
        }

        @media screen and (max-width: 768px) {
            .product-grid {
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                padding: 1rem;
                gap: 1rem;
            }

            .product-carousel {
                height: 200px;
            }
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .product-card {
            animation: fadeIn 0.6s ease forwards;
            opacity: 0;
            animation-delay: calc(var(--index) * 0.1s);
        }

        /* Default styling for larger screens */
.category-heading {
    font-size: 3rem; /* Large font size for desktop */
    font-weight: bold;
}

/* Medium screens (tablets) */
@media (max-width: 768px) {
    .category-heading {
        font-size: 2.5rem; /* Slightly smaller font size */
    }
}

/* Small screens (mobile devices) */
@media (max-width: 576px) {
    .category-heading {
        font-size: 2rem; /* Even smaller font size for small screens */
    }
}

/* Styling for the "no products" container */
.no-products-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: calc(100vh - 200px); /* Adjust height to fit between navbar and footer */
    text-align: center;
    background-color: #f9f9f9; /* Optional background color */
    padding: 20px;
    box-sizing: border-box;
}

/* Styling for the heading text */
.no-products-text {
    font-size: 1.8rem;
    color: #28a745;
    font-weight: bold;
    margin-bottom: 20px;
    text-align: center;
}

/* Styling for the image */
.no-products-image {
    max-width: 70%; /* Restrict max width for responsiveness */
    height: auto;
    object-fit: cover;
    border-radius: 8px; /* Optional for rounded corners */
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); /* Optional shadow */
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .no-products-container {
        padding: 10px;
    }

    .no-products-text {
        font-size: 1.5rem;
    }

    .no-products-image {
        max-width: 90%; /* Expand image width on smaller screens */
    }
}

@media (max-width: 576px) {
    .no-products-text {
        font-size: 1.2rem;
    }

    .no-products-image {
        max-width: 95%; /* Almost full width on very small screens */
    }
}


    </style>
<% if (products.length > 0) { %>
    <div class="product-grid">
        <% products.forEach((product, index) => { %>
            <div class="product-card" style="--index: <%= index %>">
                <div class="product-carousel">
                    <% if (product.imgArray.length > 0) { %>
                        <% product.imgArray.forEach((img, imgIndex) => { %>
                            <img 
                                class="carousel-image <%= imgIndex === 0 ? 'active' : '' %>" 
                                src="<%= '/uploads/' + img %>"
                                alt="Product Image"
                            >
                        <% }) %>
                    <% } else { %>
                        <p class="text-center">No images available</p>
                    <% } %>
                </div>

                <div class="product-details">
                    <h5 class="product-name"><%= product.name %></h5>

                    <div class="product-pricing">
                        <% if (product.discount > 0) { %>
                            <span class="final-price">Rs <%= product.finalPrice.toFixed(0)  %></span>
                            <span class="original-price">Rs <%= product.price.toFixed(0)  %></span>
                            <span class="discount-badge"><%= product.discount.toFixed(0)  %>% OFF</span>
                        <% } else { %>
                            <span class="final-price">Rs <%= product.finalPrice.toFixed(0)  %></span>
                        <% } %>
                        <form class="wishlist-form" data-id="<%= product._id %>">
                            <span type="button" class="wishlist-btn">
                                <i class="fas fa-heart"></i>
                            </span>
                        </form>
                    </div>

                    <p class="stock-info">Stock: <%= product.stock %> units</p>

                    <% if (product.stock > 0) { %>
                        <a href="/product/<%= product._id %>" class="product-action">
                            Detailed View
                        </a>
                    <% } else { %>
                        <a href="#" class="product-action out-of-stock" onclick="return false;">
                            Out of Stock
                        </a>
                    <% } %>
                </div>
            </div>
        <% }) %>
    </div>
<% } else { %>
    <div class="no-products-container">
        <p class="no-products-text">No products found in this category</p>
        <img 
            src="../../public/assets/freepik__upload__757.jpeg" 
            alt="No products found" 
            class="no-products-image"
        />
    </div>
<% } %>




<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const wishlistForms = document.querySelectorAll('.wishlist-form');
    
        wishlistForms.forEach(form => {
            form.querySelector('.wishlist-btn').addEventListener('click', function () {
                const productId = form.getAttribute('data-id');
    
                // Perform an AJAX POST request to add the product to the wishlist
                fetch(`/add-wishlist/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ productId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Display success toast notification
                        Swal.fire({
                            toast: true,
                            icon: 'success',
                            title: 'Product added to wishlist!',
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true,
                        });
                    } else {
                        // Display error toast notification if something goes wrong
                        Swal.fire({
                            toast: true,
                            icon: 'error',
                            title: 'Product already in the wishlist!',
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true,
                        });
                    }
                })
                .catch(error => {
                    console.error('Error adding to wishlist:', error);
                    Swal.fire({
                        toast: true,
                        icon: 'error',
                        title: 'An error occurred!',
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 3000,
                        timerProgressBar: true,
                    });
                });
            });
        });
    });
    </script>
