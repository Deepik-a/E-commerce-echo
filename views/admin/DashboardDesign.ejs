
<style>
:root{
  --clr-radio-1: black;
  --clr-radio-2: rgb(255 0 0);
  --clr-radio-3: rgb(0 0 255);
  --clr-radio-4: green;
}

body{
  min-height: 100svh;
  font-family: system-ui;
  margin: 0;
}
@property --angle {
  syntax: "<angle>";
  initial-value: 0deg;
  inherits: false;
}
.spin{
  --color: var(--clr-radio-1);
  
  position: relative;
  height: 100svh;
  padding: 1rem;
  display: grid;
  place-content: center;
  text-align: center;
  line-height: .9;
  
  
  background-color: white;
  background-image: linear-gradient(var(--angle), white 50%, var(--color) 50%);
  animation: bg-rotate 10000ms linear infinite;
}
@keyframes bg-rotate {
  from {
    --angle: 0deg;
  }
  to {
    --angle: 360deg;
  }
}

h1{
  position: relative;
  color: var(--color);
  filter:  invert(100%);
  mix-blend-mode: difference;

  /* styling  */
  font-size: 3rem;
  letter-spacing: .25em;
  text-transform: uppercase;

}
.controls{
  position: fixed;
  top: 1rem;
  left: 50%;
  translate: -50% 0;
  border: 1px solid rgba(255 255 255 /.5);
  background-color: rgba(0 0 0 / .15);
  border-radius: 2px;
  padding: .25rem;
  display: flex;
  gap: 0.25rem;
  z-index: 10;
}
.controls:has(input[type=radio]:nth-child(1):checked) + .spin{
 --color: var(--clr-radio-1);
}
.controls:has(input[type=radio]:nth-child(2):checked) + .spin{
 --color: var(--clr-radio-2);
}
.controls:has(input[type=radio]:nth-child(3):checked) + .spin{
 --color: var(--clr-radio-3);
}
.controls:has(input[type=radio]:nth-child(4):checked) + .spin{
 --color: var(--clr-radio-4);
}

.controls > input{
  --_size: 1.5rem;
  cursor: pointer;
  margin: 0;
  padding: 0;
  appearance: none;
  border: 1px solid rgba(255 255 255 /.5);
  outline: none;
  border-radius: 50%;
  width: var(--_size);
  height: var(--_size);
  background-color: var(--radio-clr);
  scale: .8;
  transition: scale 300ms ease-in-out;
}
.controls > input:nth-child(1){
  --radio-clr: var(--clr-radio-1);
}
.controls > input:nth-child(2){
  --radio-clr: var(--clr-radio-2);
}
.controls > input:nth-child(3){
  --radio-clr: var(--clr-radio-3);
}
.controls > input:nth-child(4){
  --radio-clr: var(--clr-radio-4);
}

.controls > input:focus-visible,
.controls > input:hover{
   scale: 1;
}
.controls > input:checked{
  scale: 1.05;
}


