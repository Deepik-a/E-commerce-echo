<!-- Navbar End -->
<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4" style="max-width: 80%; margin: 0 auto;">
        <h4 class="mb-4">User Management</h4>
        <!-- Add a container with a smaller width -->
        <div class="table-responsive" style="max-width: 80%; margin: 0 auto;">
            <table class="table table-bordered" style="width: 100%;">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td>
                                <% if (user.isBlocked) { %>
                                    <span class="badge bg-danger">Blocked</span>
                                <% } else { %>
                                    <span class="badge bg-success">Active</span>
                                <% } %>
                            </td>
                            <td>
                                <% if (user.isBlocked) { %>
                                    <a href="#" class="btn btn-primary btn-sm" onclick="confirmUnblock('<%= user._id %>')">Unblock</a>
                                <% } else { %>
                                    <a href="#" class="btn btn-primary btn-sm" onclick="confirmBlock('<%= user._id %>')">Block</a>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
  </div>
  

 
  <div class="pagination-container">
    <% if (hasPrevPage) { %>
        <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>" class="pagination-link">Previous</a>
    <% } %>

    <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="?page=<%= i %>&limit=<%= limit %>" 
           class="pagination-link <%= i === currentPage ? 'active' : '' %>">
           <%= i %>
        </a>
    <% } %>

    <% if (hasNextPage) { %>
        <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>" class="pagination-link">Next</a>
    <% } %>
</div>




