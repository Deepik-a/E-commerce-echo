      transition: all 0.3s;
      padding: 20px;
    }

    @media (max-width: 992px) {
      .bed-sidebar {
        margin-left: -250px;
      }
      
      .bed-sidebar.active {
        margin-left: 0;
      }

      .sidebar-toggle {
        display: block;
      }

      .content-wrapper {
        margin-left: 0;
      }

      .content-wrapper.active {
        margin-left: 250px;
      }
    }
  </style>
